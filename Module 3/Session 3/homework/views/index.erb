<h1>Items</h1>
<a href="/item/create">New Item</a>
<a href="/category">Category</a>

<table border='1'>
    <thead>
        <tr>
            <th>Item</th>
            <th>Price</th>
            <th colspan='3'>Action</th>
        </tr>
    </thead>
    <tbody>
        <% items.each do |item| %>
        <tr>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td><a href="/item/<%= item.id %>">Detail</a></td>
            <td><a href="/item/<%= item.id %>/edit">Edit</a></td>
            <td>
                <form action="/item/<%= item.id %>" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="submit" value="Delete">
                </form>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>